{
  "name": "@nxus/basic-app",
  "version": "2.4.0",
  "description": "A template for basic Nxus applications",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "pretest": "./node_modules/forever/bin/forever stopall && NODE_ENV=test PORT=3001 ./node_modules/forever/bin/forever start index.js && sleep 15",
    "test": "NODE_ENV=test mocha --recursive --compilers js:babel-register -R spec modules/**/test/*",
    "posttest": "./node_modules/forever/bin/forever stop index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxus/basic-app.git"
  },
  "keywords": [
    "nxus"
  ],
  "author": "mjreich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nxus/basic-app/issues"
  },
  "homepage": "https://github.com/nxus/basic-app#readme",
  "config": {
    "dev": {
      "host": "localhost",
      "siteName": "Nxus Dev Site",
      "storage": {
        "modelsDir": "./models",
        "adapters": {
          "default": "sails-mongo"
        },
        "connections": {
          "default": {
            "adapter": "default",
            "url": "mongodb://localhost/nxus-dev"
          }
        }
      },
      "baseUrl": "localhost:3000"
    },
    "siteName": "Nxus App",
    "host": "localhost",
    "baseUrl": "localhost:3000"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@nxus/core": "^2.4.0-6",
    "@nxus/renderer": "^2.4.0-0",
    "@nxus/router": "^2.4.0-1",
    "@nxus/templater": "^2.4.0-1",
    "@nxus/storage": "^2.4.0-2",
    "@nxus/base-ui": "^2.4.0-4",
    "babel-register": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "bluebird": "^3.1.1",
    "moment": "^2.11.1",
    "sails-mongo": "^0.11.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@nxus/tester": "^2.4.0-0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5"
  }
}