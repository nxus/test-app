{
  "name": "@nxus/basic-app",
  "version": "2.0.0",
  "description": "A template for basic Nxus applications",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxus/basic-app.git"
  },
  "keywords": [
    "nxus"
  ],
  "author": "mjreich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nxus/basic-app/issues"
  },
  "homepage": "https://github.com/nxus/basic-app#readme",
  "config": {
    "dev": {
      "host": "localhost",
      "siteName": "Nxus Dev Site",
      "storage": {
        "modelsDir": "./models",
        "adapters": {
          "default": "sails-mongo"
        },
        "connections": {
          "default": {
            "adapter": "default",
            "url": "mongodb://localhost/nxus-dev"
          }
        }
      }
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@nxus/core": "^2.2.1",
    "@nxus/renderer": "^2.2.0",
    "@nxus/router": "^2.2.0",
    "@nxus/templater": "^2.2.1",
    "@nxus/storage": "^2.2.2",
    "@nxus/base-ui": "^2.0.0",
    "babel-register": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "bluebird": "^3.1.1",
    "moment": "^2.11.1",
    "sails-mongo": "^0.11.5",
    "underscore": "^1.8.3"
  }
}
